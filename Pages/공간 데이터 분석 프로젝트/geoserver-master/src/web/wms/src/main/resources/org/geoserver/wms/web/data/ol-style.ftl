div#${id} {
  border: 2px groove black;
  height: 300px;
}

div#%1$s div.olMap {
  height: 100%%;
}

div#${id} div.olControlScale {
  background: white;
  border-color: black;
  border-style: solid;
  border-width: 2px 0px 0px 2px;
  bottom: 0px;
  padding: 3px;
  right: 0px;
}

.ol-control.ol-scale {
  position: absolute;
  bottom: -1px;
  right: -1px;
  padding: 4px;
  border: 1px solid black;
  border-radius: 0px;
  background-color: white;
}
