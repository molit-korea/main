<wfs:GetFeature
        xmlns:ogc="http://www.opengis.net/ogc"
        xmlns:st_gml31="http://www.stations_gml31.org/1.0"
        xmlns:ms_gml31="http://www.measurements_gml31.org/1.0"
        xmlns:wfs="http://www.opengis.net/wfs"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.opengis.net/wfs http://schemas.opengis.net/wfs/1.1.0/wfs.xsd">
    <wfs:Query typeName="st_gml31:Station_gml31">
        <ogc:Filter>
            <ogc:And>
                <ogc:PropertyIsEqualTo>
                    <ogc:PropertyName>st_gml31:Station_gml31/st_gml31:tag</ogc:PropertyName>
                    <ogc:Literal>europe</ogc:Literal>
                </ogc:PropertyIsEqualTo>
                <ogc:PropertyIsEqualTo>
                    <ogc:PropertyName>
                        st_gml31:Station_gml31/st_gml31:measurements/ms_gml31:Measurement_gml31/ms_gml31:tag
                    </ogc:PropertyName>
                    <ogc:Literal>desert_tag</ogc:Literal>
                </ogc:PropertyIsEqualTo>
            </ogc:And>
        </ogc:Filter>
    </wfs:Query>
</wfs:GetFeature>