<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miyon.tts.MainActivity">


    <TabHost
        android:layout_width="match_parent"
        android:id="@+id/tabHost1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:id="@android:id/tabs">
            </TabWidget>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabcontent">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content1"
                    >

                    <fragment
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        class = "com.google.android.gms.maps.MapFragment"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="65dp"
                        android:text="60"
                        android:gravity="left"
                        android:id="@+id/txt_speed"
                        android:textColor="#050505"
                        android:layout_gravity="right|bottom"/>
                    <TextView
                        android:id="@+id/km_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="11dp"
                        android:gravity="bottom"
                        android:textColor="#ea0b0b"
                        android:textSize="18dp"
                        android:text="km/h"
                        android:layout_gravity="right|bottom"
                        android:textStyle="bold"/>

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/content2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="5dp"
                            android:textSize="75dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt"/>
                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="68dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:max="5"
                            android:isIndicator="true"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:gravity="fill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ProgressBar
                            android:id="@+id/pro1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progress"
                            android:indeterminate="false"
                            android:layout_marginLeft="10dp"
                            android:layout_width="220dp"
                            android:layout_height="20dp"
                            android:max="100"
                            android:progress="70"
                            />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="fill|top"
                            android:layout_toRightOf="@id/pro1"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:id="@+id/txt_1"/>
                    </RelativeLayout>


                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt2"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ProgressBar
                            android:id="@+id/pro2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="220dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="fill|top"
                            android:layout_toRightOf="@id/pro2"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:id="@+id/txt_2"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt3"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ProgressBar
                            android:id="@+id/pro3"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progress"
                            android:indeterminate="false"
                            android:layout_marginLeft="10dp"
                            android:layout_width="220dp"
                            android:layout_height="20dp"
                            android:max="100"
                            android:progress="50"
                            />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="fill|top"
                            android:layout_toRightOf="@id/pro3"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:id="@+id/txt_3"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/mint"
                        android:text="승객의 한마디 입니다"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/list"
                        >
                    </ListView>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>